{
    "name": "Fleeting Notes",
    "description": "A lightweight note-taking app for capturing and connecting fleeting thoughts.",
    "version": "0.1.3",
    "content_security_policy": {
      "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "action": {
      "default_popup": "web-ext.html",
      "default_icon": "/icons/196.png"
    },
    "permissions": [
      "tabs"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key" : {
         "default": "Ctrl+Shift+E",
         "mac": "Command+Shift+E"
        }
      }
    },
    "manifest_version": 3
  }
  