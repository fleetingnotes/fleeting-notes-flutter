{
    "name": "Fleeting Notes",
    "description": "A scratchpad for connected notes",
    "version": "0.4.0",
    "content_security_policy": {
      "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "action": {
      "default_popup": "web-ext.html",
      "default_icon": "/icons/196.png"
    },
    "permissions": [
      "tabs"
    ],
    "commands": {
      "_execute_action": {
        "suggested_key" : {
         "default": "Ctrl+Shift+E",
         "mac": "Command+Shift+E"
        }
      }
    },
    "web_accessible_resources": [{
      "resources": ["web-ext.html", "styles.css", "jquery-3.6.0.min.js"],
      "matches": ["<all_urls>"]  
      }
    ],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content-script.js", "jquery-3.6.0.min.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "manifest_version": 3
  }
  